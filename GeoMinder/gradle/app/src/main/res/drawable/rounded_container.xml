<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer (This is a darker color and slightly offset) -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape>
            <solid android:color="#30000000"/> <!-- Shadow color with opacity -->
            <corners android:radius="16dp"/>
        </shape>
    </item>


    <!-- Main Shape Layer (Your original shape with transparency) -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#40FFFFFF"/> <!-- 50% opacity -->
            <corners android:radius="16dp"/>
            <stroke android:color="#80DDDDDD" android:width="1dp"/>
            <padding android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="50dp"/>
        </shape>
    </item>
</layer-list>

