<!-- res/drawable/nav_item_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state background: transparent to remove the default grey circle -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <!-- Unselected state background: transparent as well -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>



