<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ui.AboutActivity">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">




        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"
            android:layout_marginEnd="16dp"
            android:foregroundGravity="center"
            android:src="@drawable/geominder" />




        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imageView"
            android:layout_marginStart="-329dp"
            android:layout_marginTop="210dp"
            android:layout_toEndOf="@id/imageView"
            android:text="@string/about"
            android:gravity="center"
            android:lineSpacingExtra="8dp"
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/roboto_slab"
            android:textSize="18sp" />




        <TextView
            android:id="@+id/featuresTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView"
            android:layout_marginTop="51dp"
            android:text="Loading features..."
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:fontFamily="@font/lato"
            android:textSize="16sp" />




        <Button
            android:id="@+id/goButton"
            android:layout_width="33mm"
            android:layout_height="wrap_content"
            android:layout_below="@id/featuresTextView"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="Go"
            android:backgroundTint="@color/yellowgreen"
            android:textSize="20sp" />








    </RelativeLayout>
</ScrollView>







